	SEARCH PROLOG
	TITLE LDINIT

;INITIALIZE LOADER WITH STORAGE-AREA VARIABLES

	INTERN TSBLOC,JSBLOC,RESVLC,NRESLC,NRPLOC,JFNPC,KILOCS

LDINIT==1		;DEFINES THAT WE ARE ASSEMBLING THIS PACKAGE

TSBLOC=PSB+ALRMAX		;LEAVE ROOM FOR ALR
JSBLOC=JSB
RESVLC=RESLOC		;RESIDENT VARIABLE STORAGE
KILOCS=KIEPT+424	;PROCESSOR DEPENDENT VARIABLE STORAGE
NRESLC=NRESBG		;SWAPABLE STORAGE
NRPLOC=NRPLBG		;SWAPPABLE STORAGE ASSIGNED PAGE AT A TIME
JFNPC=JFNPC0		;JFN STORAGE, STARTING TOWARD END OF JSB

	END
